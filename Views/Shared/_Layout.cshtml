<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Airbb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Airbb.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="container cnt pt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-danger text-white">
        <div class="container">
            &copy; 2025 - Airbb - 
            <a asp-area="" asp-controller="Home" asp-action="Support">Support</a>&nbsp;
            <a asp-area="" asp-controller="Home" asp-action="CancellationPolicy">Cancellation Policy</a>&nbsp;
            <a asp-area="" asp-controller="Home" asp-action="TermsConditions">Terms & Condition</a>&nbsp;
            <a asp-area="" asp-controller="Home" asp-action="CookiesPolicy">Cookie Policies</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
