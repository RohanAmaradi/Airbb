@model Airbb.Models.ResidenceViewModel

@{
    ViewData["Title"] = "Belong anywhere";
}

<div class="min-vh-100 bg-light">
    <!-- Header Section -->
    <div class="bg-white shadow-sm">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="h3 mb-0 text-primary fw-bold">Airbb</h1>
                    <p class="text-muted mb-0">Belong anywhere</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row">
            <!-- Filters Sidebar -->
            <div class="col-lg-4 col-xl-3 mb-4">
                <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h5 class="card-title mb-0 fw-semibold">
                            <i class="fas fa-sliders-h me-2 text-primary"></i>Search Filters
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <form method="post" asp-action="Index" id="searchForm">
                            <!-- Location Filter -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark mb-2">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>Destination
                                </label>
                                <select name="activeLocation" class="@Model.CheckActiveLocation("all") form-select form-select-lg border-0 bg-light">
                                    <option value="all">Anywhere</option>
                                    @foreach (Airbb.Models.Location C in Model.Location)
                                    {
                                        <option value="@C.LocationId" selected="@(Model.ActiveLocation == C.LocationId.ToString())">
                                            @C.Name
                                        </option>
                                    }
                                </select>
                            </div>

                            <!-- Date Range -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark mb-2">
                                    <i class="fas fa-calendar-alt me-2 text-primary"></i>Dates
                                </label>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <input class="form-control border-0 bg-light"
                                               id="ActiveCheckInDate" name="ActiveCheckInDate" 
                                               value="@(Model.ActiveCheckOutDate != "all" ? Model.ActiveCheckOutDate : "")"
                                               placeholder="Check-in" autocomplete="off">
                                    </div>
                                    <div class="col-6">
                                        <input class="form-control border-0 bg-light"
                                               id="ActiveCheckOutDate" name="ActiveCheckOutDate" 
                                               value="@(Model.ActiveCheckOutDate != "all" ? Model.ActiveCheckOutDate : "")"
                                               placeholder="Check-out" autocomplete="off">
                                    </div>
                                </div>
                            </div>

                            <!-- Guests -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark mb-2">
                                    <i class="fas fa-users me-2 text-primary"></i>Guests
                                </label>
                                <input type="number" class="form-control form-control-lg border-0 bg-light"
                                       id="ActiveNoOfGuests" name="ActiveNoOfGuests" min="1"
                                       value="@(Model.ActiveNoOfGuests != "all" ? Model.ActiveNoOfGuests : "1")">
                            </div>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Clear Filter</a>
                            <!-- Search Button -->
                            <button type="submit" class="btn btn-primary btn-lg w-100 py-3 fw-semibold">
                                <i class="fas fa-search me-2"></i>Search Stays
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Results Section -->
            <div class="col-lg-8 col-xl-9">
                <!-- Results Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="h4 fw-bold text-dark mb-1">Available Stays</h2>
                        <p class="text-muted mb-0">
                            @if (Model.Residence != null && Model.Residence.Any())
                            {
                                <span>Found <strong>@Model.Residence.Count</strong> properties</span>
                            }
                            else
                            {
                                <span>No properties found</span>
                            }
                        </p>
                    </div>
                    <div class="d-none d-md-block">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-secondary active">
                                <i class="fas fa-th"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary">
                                <i class="fas fa-list"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Results Grid -->
                @if (Model.Residence != null && Model.Residence.Any())
                {
                    <div class="row g-4">
                        @foreach (var res in Model.Residence)
                        {
                            <div class="col-sm-6 col-xl-4">
                                <div class="card h-100 border-0 shadow-sm property-card">
                                    <div class="position-relative">
                                        <img src="~/images/@res.ResidencePicture"
                                             class="card-img-top property-image"
                                             alt="@res.Name"
                                             style="height: 200px; object-fit: cover;">
                                        <div class="position-absolute top-0 end-0 m-3">
                                            <button class="btn btn-light btn-sm rounded-circle shadow-sm">
                                                <i class="far fa-heart"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="card-body d-flex flex-column">
                                        <div class="mb-2">
                                            <span class="badge bg-primary bg-opacity-10 text-primary mb-2">Popular</span>
                                            <h6 class="card-title fw-semibold text-dark mb-1">@res.Name</h6>
                                            <p class="text-muted small mb-2">
                                                <i class="fas fa-map-marker-alt text-primary me-1"></i>@res.Location.Name
                                            </p>
                                        </div>

                                        <div class="mb-3">
                                            <div class="d-flex text-muted small mb-2">
                                                <span class="me-3">
                                                    <i class="fas fa-users me-1"></i>@res.GuestNumber guests
                                                </span>
                                                <span class="me-3">
                                                    <i class="fas fa-bed me-1"></i>@res.BedroomNumber beds
                                                </span>
                                                <span>
                                                    <i class="fas fa-bath me-1"></i>@res.BathroomNumber baths
                                                </span>
                                            </div>
                                        </div>

                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="h5 fw-bold text-dark mb-0">$@res.PricePerNight</span>
                                                <small class="text-muted">per night</small>
                                            </div>
                                            <a asp-action="Details" asp-route-id="@res.ResidenceId"
                                               class="btn btn-primary w-100 fw-semibold">
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <!-- Empty State -->
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-search fa-4x text-muted opacity-25 mb-3"></i>
                            <h3 class="h4 text-dark mb-2">No properties found</h3>
                            <p class="text-muted mb-4">Try adjusting your search filters to find more results.</p>
                            <button type="button" onclick="document.getElementById('searchForm').reset()"
                                    class="btn btn-primary px-4">
                                Clear Filters
                            </button>
                        </div>
                    </div>
                }

                <!-- Load More (if needed) -->
                @if (Model.Residence?.Count >= 12)
                {
                    <div class="text-center mt-5">
                        <button class="btn btn-outline-primary px-5">Load More</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>