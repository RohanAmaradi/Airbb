@model List<Airbb.Models.Location>

@{
    ViewData["Title"] = "Locations";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- Header / Add Button -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold text-dark">Locations</h2>

                    <a asp-controller="ManageLocation"
                       asp-action="Add"
                       class="btn btn-primary shadow-sm rounded-3 px-4 py-2">
                        <i class="fa-solid fa-plus me-2"></i>Add Location
                    </a>
                </div>

                <!-- Card Wrapper -->
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4">

                        <!-- Table -->
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th class="fw-semibold">Location Name</th>
                                    <th class="text-end fw-semibold">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var loc in Model)
                                {
                                    <tr>
                                        <td class="fs-6 fw-semibold">@loc.Name</td>

                                        <td class="text-end">

                                            <!-- Edit Button -->
                                            <a asp-controller="ManageLocation"
                                               asp-action="Edit"
                                               asp-route-id="@loc.LocationId"
                                               class="btn btn-sm btn-outline-primary me-2">
                                                Edit
                                            </a>

                                            <!-- Delete Button -->
                                            <a asp-controller="ManageLocation"
                                               asp-action="Delete"
                                               asp-route-id="@loc.LocationId"
                                               class="btn btn-sm btn-outline-danger">
                                                Delete
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
