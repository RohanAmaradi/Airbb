@model Airbb.Models.Location
@{
    ViewData["Title"] = "Delete Location";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">

                <!-- Back Navigation -->
                <a asp-action="Index" asp-controller="ManageLocation" class="btn btn-outline-secondary btn-sm mb-4">
                    <i class="fa-solid fa-arrow-left me-2"></i>Back to List
                </a>

                <!-- Main Card -->
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                    <div class="card-body p-4">

                        <!-- Title -->
                        <h2 class="h4 fw-bold text-dark mb-3">
                            Delete Location
                        </h2>

                        <!-- Warning -->
                        <h5 class="fw-bold text-danger mt-2">
                            Are you sure you want to delete this Location?
                        </h5>

                        <!-- Location Details Box -->
                        <div class="mt-4 p-4 bg-light rounded-3">
                            <div class="d-flex align-items-center">
                                <i class="fa-solid fa-location-dot fa-xl text-primary me-3"></i>
                                <div>
                                    <div class="fw-semibold fs-5">@Model.Name</div>
                                    <div class="text-muted">Location Name</div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-4 pt-3 border-top d-grid gap-2">

                            <form method="post" asp-action="Delete">
                                <input type="hidden" asp-for="LocationId" />
                                <button type="submit"
                                        class="btn btn-danger btn-lg fw-semibold py-2">
                                    <i class="fa-solid fa-trash me-2"></i>
                                    Confirm Delete
                                </button>
                            </form>

                            <a asp-action="Index" asp-controller="ManageLocation"
                               class="btn btn-outline-secondary btn-lg py-2">
                                Cancel
                            </a>

                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
