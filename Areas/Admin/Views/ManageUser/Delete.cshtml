@model Airbb.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- Back Navigation -->
                <a asp-action="Index" asp-controller="ManageUser" class="btn btn-outline-secondary btn-sm mb-4">
                    <i class="fa-solid fa-arrow-left me-2"></i>Back to List
                </a>

                <!-- Main Card -->
                <div class="card border-0 shadow-lg overflow-hidden">
                    <div class="row g-0">

                        <!-- Left Section (Profile Placeholder) -->
                        <div class="col-md-6 bg-light d-flex align-items-center justify-content-center"
                             style="height: 350px;">
                            <div class="text-center">
                                <i class="fa-solid fa-user-circle text-secondary"
                                   style="font-size: 120px;"></i>
                                <h4 class="mt-3 fw-bold">@Model.Name</h4>
                            </div>
                        </div>

                        <!-- Details Section -->
                        <div class="col-md-6">
                            <div class="card-body d-flex flex-column p-4">

                                <h2 class="h4 fw-bold text-dark mb-2">@Model.Name</h2>

                                <div class="d-flex align-items-center text-muted mb-2">
                                    <i class="fa-solid fa-envelope text-primary me-2"></i>
                                    <span>@Model.EmailAddress</span>
                                </div>

                                <h5 class="fw-bold text-danger mt-3">
                                    Are you sure you want to delete this User?
                                </h5>

                                <!-- User Detail Cards -->
                                <div class="row g-2 mt-3">

                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded-3 text-center">
                                            <i class="fa-solid fa-phone text-primary fa-lg mb-2"></i>
                                            <div class="fw-semibold">@Model.PhoneNo</div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded-3 text-center">
                                            <i class="fa-solid fa-cake-candles text-success fa-lg mb-2"></i>
                                            <div class="fw-semibold">
                                                @Model.DOB?.ToString("yyyy-MM-dd")
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded-3 text-center">
                                            <i class="fa-solid fa-id-card text-warning fa-lg mb-2"></i>
                                            <div class="fw-semibold">@Model.SSN</div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded-3 text-center">
                                            <i class="fa-solid fa-user-tag text-info fa-lg mb-2"></i>
                                            <div class="fw-semibold">@Model.UserType</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="mt-auto pt-4 border-top d-grid gap-2">

                                    <form method="post" asp-action="Delete">
                                        <input type="hidden" asp-for="UserId" />
                                        <button type="submit"
                                                class="btn btn-danger btn-lg fw-semibold py-2">
                                            <i class="fa-solid fa-trash me-2"></i>
                                            Confirm Delete
                                        </button>
                                    </form>

                                    <a asp-action="Index" asp-controller="ManageUser"
                                       class="btn btn-outline-secondary btn-lg py-2">
                                        Cancel
                                    </a>

                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
