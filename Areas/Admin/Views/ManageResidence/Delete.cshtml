@model Airbb.Models.Residence
@{
    ViewData["Title"] = "Delete Residence";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- Back Navigation -->
                <a asp-action="Index" asp-controller="ManageResidence" class="btn btn-outline-secondary btn-sm mb-4">
                    <i class="fa-solid fa-arrow-left me-2"></i>Back to List
                </a>

                <!-- Main Card -->
                <div class="card border-0 shadow-lg overflow-hidden">
                    <div class="row g-0">

                        <!-- Image Section -->
                        <div class="col-md-6">
                            <img src="~/images/@Model.ResidencePicture"
                                 class="img-fluid h-100 w-100"
                                 style="object-fit: cover; height: 350px;"
                                 alt="@Model.Name">
                        </div>

                        <!-- Details Section -->
                        <div class="col-md-6">
                            <div class="card-body d-flex flex-column p-4">

                                <h2 class="h4 fw-bold text-dark mb-2">@Model.Name</h2>

                                <div class="d-flex align-items-center text-muted mb-2">
                                    <i class="fa-solid fa-location-dot text-primary me-2"></i>
                                    <span>@Model.Location?.Name</span>
                                </div>

                                <h5 class="fw-bold text-danger mt-3">Are you sure you want to delete this Residence?</h5>

                                <div class="row g-2 mt-3">
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded-3 text-center">
                                            <i class="fa-solid fa-users text-primary fa-lg mb-2"></i>
                                            <div class="fw-semibold">@Model.GuestNumber Guests</div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded-3 text-center">
                                            <i class="fa-solid fa-bed text-success fa-lg mb-2"></i>
                                            <div class="fw-semibold">@Model.BedroomNumber Bedrooms</div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded-3 text-center">
                                            <i class="fa-solid fa-bath text-info fa-lg mb-2"></i>
                                            <div class="fw-semibold">@Model.BathroomNumber Bathrooms</div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded-3 text-center">
                                            <i class="fa-solid fa-building text-warning fa-lg mb-2"></i>
                                            <div class="fw-semibold">
                                                Built @Model.BuiltYear?.Year
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-4">
                                    <h4 class="text-primary fw-bold">$@Model.PricePerNight / night</h4>
                                </div>

                                <!-- Action Buttons -->
                                <div class="mt-auto pt-4 border-top d-grid gap-2">

                                    <form method="post" asp-action="Delete">
                                        <input type="hidden" asp-for="ResidenceId" />
                                        <button type="submit"
                                                class="btn btn-danger btn-lg fw-semibold py-2">
                                            <i class="fa-solid fa-trash me-2"></i>
                                            Confirm Delete
                                        </button>
                                    </form>

                                    <a asp-action="Index" asp-controller="ManageResidence"
                                       class="btn btn-outline-secondary btn-lg py-2">
                                        Cancel
                                    </a>

                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
